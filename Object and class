#include<iostream>
using namespace std;

class student
{                                            //class(student) is user-defined data type. and class is a keyword.
    public:            //access modifier
     string name;
     int age, roll_number;
     string grade;

};

int main()
{

    student s1;   // here s1 is the object of class student. object is an entity that has a state and behaviour.

    s1.name = "Rohit";
    s1.age=10;
    s1.roll_number=21;
    s1.grade="A+";

cout<<s1.age<<" "<<endl;;

 student s2;  //here s2 is the object of the class student.

    s2.name = "Mohit";
    s2.age=12;
    s2.roll_number=161;
    s2.grade="B+";

cout<<s2.name<<" "<<endl;



}
